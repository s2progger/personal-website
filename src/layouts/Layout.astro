---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Simon Twogood</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Let's build things" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />

    <meta name="theme-color" content="#030822	" />
  </head>
  <body class="dark mx-auto max-w-screen-xl p-4">
    <header class="print:hidden">
      <nav>
        <div class="flex flex-wrap items-center justify-evenly justify-items-stretch gap-2 md:justify-between">
          <a href="/" class="left flex items-center space-x-3 hover:text-blue-600 rtl:space-x-reverse">
            <svg width="1em" height="1em" viewBox="0 0 256 256" class="size-8" data-icon="ph:wave-triangle-duotone">
              <symbol id="ai:ph:wave-triangle-duotone">
                <g fill="currentColor">
                  <path d="m76 56l52 72H24Zm156 72H128l52 72Z" opacity=".2"></path>
                  <path
                    d="m238.48 132.68l-52 72a8 8 0 0 1-13 0L76 69.66l-45.51 63a8 8 0 1 1-13-9.36l52-72a8 8 0 0 1 13 0l97.51 135l45.51-63a8 8 0 1 1 13 9.36Z"
                  ></path>
                </g>
              </symbol>
              <use xlink:href="#ai:ph:wave-triangle-duotone"></use>
            </svg>
            <span class="self-center whitespace-nowrap text-2xl font-semibold">Simon Twogood</span>
          </a>
          <div class="flex items-center">
            <button class="btn">
              <a href="/resume" aria-label="Resume">Resume</a>
            </button>
            <button class="btn">
              <a href="https://www.linkedin.com/in/simon-twogood" aria-label="LinkedIn Profile"> L </a>
            </button>
            <button class="btn">
              <a href="https://github.com/s2progger" aria-label="GitHub Profile"> G </a>
            </button>
          </div>
        </div>
      </nav>
    </header>
    <slot />
  </body>
</html>

<style>
  @font-face {
    font-family: "Fira Sans";
    src: url("/fonts/FiraSans-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Fira Sans";
    src: url("/fonts/FiraSans-SemiBold.woff2") format("woff2");
    font-weight: 600;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Fira Sans";
    src: url("/fonts/FiraSans-Bold.woff2") format("woff2");
    font-weight: bold;
    font-style: normal;
    font-display: fallback;
  }

  @font-face {
    font-family: "Fira Mono";
    src: url("/fonts/FiraMono-Regular.woff2") format("woff2");
    font-weight: normal;
    font-style: normal;
    font-display: fallback;
  }
</style>
